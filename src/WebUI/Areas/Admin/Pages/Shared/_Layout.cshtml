                            <a class="nav-link">

                                <i class="nav-icon fas fa-info-circle"></i>
                                <p>
                                    Trang chủ
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-page="/Home/Slide/Index" class="nav-link">
                                      
                                        <p>
                                            Slides
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-page="/Home/Index" class="nav-link">
                                   
                                        <p>
                                            Bài viết giới thiệu
                                        </p>
                                    </a>
                                </li>
                            </ul>



                        </li>
                        <li class="nav-item has-treeview">
                            <a class="nav-link">

                                <i class="nav-icon fas fa-info-circle"></i>
                                <p>
                                    Hacid (About)
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">

                                <li class="nav-item has-treeview">
                                    <a class="nav-link">
                                        <p>
                                            Thông tin chung
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        <li class="nav-item">
                                            <a asp-page="/About/Index" class="nav-link">

                                                <p>Bài viết</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-page="/About/AboutProjectField/Index" class="nav-link">

                                                <p>Lĩnh vực hoạt động</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-page="/About/CompanyHistory/Index" class="nav-link">

                                                <p>Lịch sử công ty</p>
                                            </a>
                                        </li>
                                    </ul>

                                </li>
                                <li class="nav-item has-treeview">
                                    <a class="nav-link">
                                        <p>
                                            Kinh nghiệm chuyên môn
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        <li class="nav-item">

                                            <a asp-page="/About/Specialist" class="nav-link">

                                                <p>Bài viết</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-page="/About/AboutProject/Index" class="nav-link">

                                                <p>Công trình tiêu biểu</p>
                                            </a>
                                        </li>
                                    </ul>

                                </li>
                                <li class="nav-item">
                                    <a asp-page="/About/Energy" class="nav-link">

                                        <p>Năng lực hiện tại</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-page="/About/Partner/Index" class="nav-link">

                                        <p>Khách hàng & Đối tác</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a asp-page="/News/Index" class="nav-link">
                                <i class="nav-icon far fa-images"></i>
                                <p>
                                    Tin tức
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/admin/project" class="nav-link">
                                <i class="nav-icon fab fa-product-hunt"></i>
                                <p>
                                    Dự án
                                </p>
                            </a>

                        </li>
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-tasks"></i>
                                <p>
                                    Danh mục thể loại
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">

                                <li class="nav-item">
                                    <a href="/admin/category/projectcategory" class="nav-link">
                                        <i class="fas fa-list-ol nav-icon"></i>
                                        <p>Thể loại dự án</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/admin/category/projectfield" class="nav-link">
                                        <i class="fas fa-users nav-icon"></i>
                                        <p>Lĩnh vực dự án</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/admin/category/newcategory" class="nav-link">
                                        <i class="fas fa-users nav-icon"></i>
                                        <p>Thể loại tin tức</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-page="/Category/Location" class="nav-link">
                                        <i class="fas fa-list-ol nav-icon"></i>
                                        <p>Địa điểm</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/admin/category/partnercategory" class="nav-link">
                                        <i class="fas fa-users nav-icon"></i>
                                        <p>Khách hàng & đối tác</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item has-treeview">
                            <a class="nav-link">

                                <i class="nav-icon fas fa-cog"></i>
                                <p>
                                    Cài đặt
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">

                                <li class="nav-item has-treeview">
                                    <a asp-page="/Setting/Index" class="nav-link">


                                        <p>
                                            Thông tin liên hệ
                                        </p>
                                    </a>

                                </li>
                                <li class="nav-item has-treeview">
                                    <a asp-page="/Setting/BannerSetting" class="nav-link">


                                        <p>
                                            Ảnh bìa
                                        </p>
                                    </a>

                                </li>

                            </ul>

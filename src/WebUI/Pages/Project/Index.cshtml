                            <option value="3">Hỗn hợp</option>
                            <option value="4">Văn hóa - thể thao</option>
                        </select>
                    </div>
                    <div class="option">
                        <select>
                            <option selected value="0">Tất cả lĩnh vực +</option>
                            <option value="1">Tư vấn đầu tư</option>
                            <option value="2">Tư vấn xây dựng</option>
                            <option value="3">Hỗn hợp</option>
